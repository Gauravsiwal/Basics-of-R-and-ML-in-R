
# Data Types in R
23
typeof(23)
56.23
typeof(56.23)
76L
typeof(76L)
78.6L
-21L
typeof(-21L)
5+8i
typeof(5+8i)
'Gaurav'
typeof('hello')
typeof('gaurav012@gmail.com')


# Type Casting
56
typeof(56)
val = as.integer(56)
val = as.integer('hello')
val = as.integer(6+7i)
val = as.integer(TRUE)
val = as.integer(FALSE)

val = as.character(23L)
val = as.character(TRUE)
val = as.character(6+8i)

val = as.double(67L)

val = as.logical(56)
val = as.logical(0)

val = as.complex(6)


# Assingment Operator (=,<-,->)
name = 'ravi'
23 = age
23 -> age
name <- age

# Arithmatic operators
# +,-,*,/,%/%,^,%%
a = 23
b = 45
a+b
a-b
a*2
5/2
5%/%2
3^3
25^2
7%%2
19%%3
sqrt(25)

'Hello'+'Hi'
'Hi'*2

# is. function
is.integer(5L)
is.character('hello')
is.logical(FALSE)
is.character(78)

# Output in R
