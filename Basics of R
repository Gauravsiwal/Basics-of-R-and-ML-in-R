# Input command
age <- readline('Enter your age')
temp = as.double(readline("Enter the temperature"))
typeof(temp)

# WAP to display the area and circumference of a circle 
# by taking radius as input.
pi
rad = as.double(readline('Enter the radius: '))
area = pi*rad^2
circum = 2*pi*rad
cat('Area:',area,'\nCircumference:',circum)
cat(sprintf('Area: %.2f\nCircumference: %.2f',area,circum))

# WAP to calculate the attendance by taking no of classes held
# and no of classes attended as input
classes_held = as.integer(readline('Enter the classes held: '))
classes_atten = as.integer(readline('Enter the classes Attended: '))
atten = (classes_atten/classes_held)*100
sprintf('Attendance is: %.2f%%',atten)

# WAP to take principle amount, rate in % and time in years as input and calculate the SI
# SI = (p*r*t)/100

# GST = 5%
# Service charge = 2%

#Relational operators
# >,<,>=,<=,==,!=
a>b
b>a
23 < a+b
a+22==b
56!=67

# Logical operators
#  &,&&,|,||,!
a = 23
b = 17
c = 30
b>a & c>b
34>a & c>b
b<=c | b<a

val1 = c(TRUE,TRUE,FALSE)
val2 = c(TRUE,TRUE,TRUE)

val1&val2
val1&&val2

val1|val2
val1||val2

!(a>b)
!TRUE
!(c>=a+b)

# Flow Control Statements
# if statement
age<- as.integer(readline('Enter your age: '))
if(age<18){
  print('Still young to enter')
}

# if-else
age<- as.integer(readline('Enter your age: '))
if(age<18){
  print('Still young to enter')
}else{
  print('Welcome Sir')
}




